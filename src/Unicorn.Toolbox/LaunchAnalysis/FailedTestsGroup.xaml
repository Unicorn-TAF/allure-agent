<UserControl x:Class="Unicorn.Toolbox.LaunchAnalysis.FailedTestsGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Unicorn.Toolbox.LaunchAnalysis"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="400">
    <Border BorderBrush="#FF808080" Margin="0,0,0,0">
        <Grid>
            <Border Margin="5,5,5,25" Background="#FF303030">
                <TextBlock x:Name="textErrorMessage" Margin="2,2,2,2" Foreground="#FFEAEAEA" FontFamily="Consolas" TextWrapping="Wrap" FontSize="11"/>
            </Border>
            <TextBlock x:Name="labelFoundFailedTests" Text="Fails: " HorizontalAlignment="Right" Margin="0,0,10,5" FontWeight="Bold" Foreground="#FF3399FF" Cursor="Hand" MouseDown="LabelFoundFailedTests_MouseDown" Height="20" VerticalAlignment="Bottom"/>
        </Grid>
    </Border>
</UserControl>
