<UserControl x:Class="Unicorn.Toolbox.LaunchAnalysis.FailedTestsGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Unicorn.Toolbox.LaunchAnalysis"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Border BorderBrush="#FF808080" BorderThickness="1" CornerRadius="2">
        <Grid>
            <TextBlock x:Name="textErrorMessage" Margin="10,10,10,35" Background="#FF303030" Foreground="#FFEAEAEA" FontFamily="Consolas" TextWrapping="Wrap"/>
            <Label x:Name="labelFoundFailedTests" Content="Fails: " HorizontalAlignment="Right" Margin="0,0,10,10" FontWeight="Bold" Foreground="#FF3399FF" Cursor="Hand" MouseDown="LabelFoundFailedTests_MouseDown" Height="26" VerticalAlignment="Bottom"/>
        </Grid>
    </Border>
</UserControl>
