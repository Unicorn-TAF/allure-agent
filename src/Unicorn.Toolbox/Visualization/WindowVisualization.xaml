<Window x:Class="Unicorn.Toolbox.Visualization.WindowVisualization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unicorn.Toolbox.Visualization"
        mc:Ignorable="d"
        Title="Visualizer" Height="750" Width="1100" ResizeMode="NoResize" Icon="/Unicorn.Toolbox;component/unicornIcon.ico">
    <Grid x:Name="visualizationGrid">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="canvasVisualization" Background="#FF1E1E1E">
                <Canvas.CacheMode>
                    <BitmapCache EnableClearType="False" RenderAtScale="1" SnapsToDevicePixels="True" />
                </Canvas.CacheMode>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
