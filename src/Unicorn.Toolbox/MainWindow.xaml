<Window x:Class="Unicorn.Toolbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unicorn.Toolbox"
        mc:Ignorable="d"
        Title="Unicorn toolbox" Height="750" Width="1200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="unicornIcon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl" Margin="10,10,10,0" Grid.ColumnSpan="2" Height="671" VerticalAlignment="Top" IsEnabled="False">
            <TabItem x:Name="tabStatistics" Header="Tests statistics">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,1">
                    <DataGrid x:Name="gridResults" HorizontalScrollBarVisibility="Disabled" HeadersVisibility="All" Grid.Column="0" RowHeaderWidth="0" CanUserAddRows="False" AutoGenerateColumns="False"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="224,80,10,0" Height="549" VerticalAlignment="Top">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Test Suite"  Width="350">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock VerticalAlignment="Center" Text="{Binding Name}" MouseLeftButtonDown="ClickCellWithSuite"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Tags" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DataGrid DataContext="{Binding Features}" ItemsSource="{Binding}" IsReadOnly="True" AutoGenerateColumns="False" HeadersVisibility="None">
                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn Width="*">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Metadata" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DataGrid DataContext="{Binding Metadata}" ItemsSource="{Binding}" IsReadOnly="True" AutoGenerateColumns="False" HeadersVisibility="None">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Key" Binding="{Binding Key}" />
                                                <DataGridTextColumn Header="Value" Binding="{Binding Value}"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TabControl x:Name="tabControlFilters" HorizontalAlignment="Left" Margin="10,80,0,10" Width="200">
                        <TabItem x:Name="tabFeaures" Header="Tags" Margin="-2,-2,-29,-1">
                            <ScrollViewer Margin="0,95,0,0" VerticalScrollBarVisibility="Auto">
                                <Grid x:Name="gridFeatures" Background="White"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem x:Name="tabCategories" Header="Categories" Margin="28,-2,-30,-1">
                            <ScrollViewer Margin="0,95,0,0" VerticalScrollBarVisibility="Auto">
                                <Grid x:Name="gridCategories" Background="White"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem x:Name="tabAuthors" Header="Authors" Margin="29,-2,-41,-1">
                            <ScrollViewer Margin="0,95,0,0" VerticalScrollBarVisibility="Auto">
                                <Grid x:Name="gridAuthors" Background="White"/>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                    <Button x:Name="buttonShowAll" Content="Show all" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="24,112,0,0" Click="ShowAllClick"/>
                    <TextBox x:Name="textBoxCurrentFilter" Text="" Margin="224,10,10,0" IsEnabled="False" FontSize="10" Height="65" VerticalAlignment="Top"/>
                    <Button x:Name="buttonApplyFilter" Content="Apply Filter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="118,112,0,0" Click="ApplyFilter"/>
                    <CheckBox x:Name="checkBoxShowHide" Content="Show/Hide all" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,138,0,0" RenderTransformOrigin="0.633,1.422" Unchecked="checkBox_Unchecked" Checked="checkBox_Checked"/>
                    <CheckBox x:Name="checkOnlyEnabledTests" Content="Only Enabled tests" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,178,0,0" RenderTransformOrigin="0.633,1.422" Checked="checkOnlyEnabledTests_Checked"/>
                    <CheckBox x:Name="checkOnlyDisabledTests" Content="Only Disabled tests" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,158,0,0" RenderTransformOrigin="0.633,1.422" Checked="checkOnlyDisabledTests_Checked"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabCoverage" Header="Coverage" Height="23" VerticalAlignment="Bottom">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="buttonLoadSpecs" Content="Load Specs" HorizontalAlignment="Left" Margin="224,24,0,0" VerticalAlignment="Top" Width="95" Click="LoadSpecs"/>
                    <Button x:Name="buttonGetCoverage" Content="Get coverage" HorizontalAlignment="Left" Margin="224,49,0,0" VerticalAlignment="Top" Width="95" Click="GetAutomationCoverage"/>
                    <DataGrid x:Name="gridCoverage" HorizontalScrollBarVisibility="Disabled" HeadersVisibility="All" Grid.Column="0" RowHeaderWidth="0" CanUserAddRows="False" AutoGenerateColumns="False"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="10,80,535,10">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Module"  Width="500">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock VerticalAlignment="Center" Text="{Binding Name}"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="100" IsReadOnly="True" Header="Covered by tests">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding Path=Covered, Mode=OneWay}" IsEnabled="False" Margin="2,0,2,0" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ScrollViewer Margin="638,80,250,10" VerticalScrollBarVisibility="Auto">
                        <Grid x:Name="gridModules" Background="White"/>
                    </ScrollViewer>
                    <TextBox x:Name="textBoxRunTags" Text="" Margin="923,80,10,0" FontSize="10" Height="248" VerticalAlignment="Top" TextWrapping="Wrap"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="buttonLoadTestsAssembly" Content="Load tests assembly" VerticalAlignment="Top" Click="LoadTestsAssembly" Margin="0,12,10,0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="115"/>
        <TextBox x:Name="textBoxStatistics" Text="" Margin="0,686,0,0" IsEnabled="False" Grid.ColumnSpan="2"/>

        <Button x:Name="btnVisualizeLaunch" Content="Visualize launch" HorizontalAlignment="Right" VerticalAlignment="Top" Width="115" Grid.ColumnSpan="2" Margin="0,12,130,0" Click="btnVisualizeLaunch_Click"/>
        <GroupBox x:Name="groupBox" Grid.ColumnSpan="2" Header="Visualization" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="22,39,0,0" Height="76" Width="200">
            <Grid>
                <CheckBox x:Name="checkBoxModern" Content="Circles" Margin="105,9,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.274,0.533" HorizontalAlignment="Left" Width="66" IsEnabled="False"/>
                <CheckBox x:Name="checkBoxFullscreen" Content="Fullscreen" Margin="105,35,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.274,0.533" HorizontalAlignment="Left" Width="78" IsEnabled="False"/>
                <Button x:Name="buttonVisualize" Content="Visualize" Width="91" Margin="9,6,0,0" VerticalAlignment="Top" Click="Visualize" HorizontalAlignment="Left" IsEnabled="False"/>
                <ComboBox x:Name="comboBoxPalette" HorizontalAlignment="Left" Margin="9,31,0,0" VerticalAlignment="Top" Width="91" IsEnabled="False" Height="20">
                    <ComboBoxItem Content="Light Green" Background="#558B2F" IsSelected="True"/>
                    <ComboBoxItem Content="Deep Purple" Background="#311B92"/>
                    <ComboBoxItem Content="Orange" Background="#EF6C00"/>
                </ComboBox>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
